<h1>All Classes</h1>

<table>
  <tr>
    <th class='text-right'> Count </th>
    <th class='text-left'> Name </th>
  </tr>

  <% @classes.sort { |a, b| a.name <=> b.name }.each do |cls| %>
  <tr>
    <td><%= cls.instances.length %></td>
    <td><a href="<%= classes_path %>/<%= cls.id %>"><%= cls.name%></a></td>
  </tr>
  <% end %>
  
</table>
